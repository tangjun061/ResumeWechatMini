.container {
  padding: 20px;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.filename-input {
  flex: 1;
  margin: 0 10px;
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 32px;
  line-height: 32px;
}

.filename-input::placeholder {
  color: #999;
  font-size: 14px;
}

.tabs {
  display: flex;
  margin-bottom: 8px;
  border-bottom: 1px solid #ddd;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 8px 0;
  font-size: 14px;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #07c160;
  font-weight: bold;
}

.tab-item.active:after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  height: 2px;
  background: #07c160;
}

.content {
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 4px;
  min-height: 300px;
  background: #fff;
}

.content-section {
  display: none;
}

.content-section.show {
  display: block;
}

.content-text {
  font-size: 14px;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
}

.back-btn, .download-btn {
  min-width: 80px;
  font-size: 14px;
  padding: 6px 12px;
  line-height: 1.5;
}

.header button {
  margin: 0;
} 