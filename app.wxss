/* app.wxss */
page {
    background-color: #f5f7fa;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
    min-height: 100vh;
    box-sizing: border-box;
    padding: 24px 20px;
} 

button {
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.3s ease;
}

button:active {
    opacity: 0.8;
} 